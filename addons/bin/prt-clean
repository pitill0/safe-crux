msgError() {
  echo "$APPNAME: Error, $@" 2>&1
  exit 1
}

msgVersion() {
  echo "$APPNAME $VERSION by Victor Martinez and Jose V Beneyto"
  exit 0
}

msgUsage() {
  echo "$APPNAME: Make status snapshots of installed packages and manage them."
  echo "Usage: $APPNAME subcommand <options>"
  echo "  clean         Remove all stored snapshots"
  echo "  store    msg  Take an snapshot of installed ports"
  echo "  restore  num  Restore to a status defined by certain stored snapshot"
  echo "  diff     num  Return differences between current status and a stored snapshot"
  echo "  list          List all stored snapshots"
  echo "  help          Show this help information"
  echo "  version       Show version information"
  exit 0
}

checkUID() {
  [ $(id -u) -ne 0 ] && msgError "you must be root to use $APPNAME"
}

checkVarDir() {
  [ ! -d $VARDIR ] && msgError "could not read directory $VARDIR"
}

checkSnapFile() {
  [ ! -f $1 ] && msgError "could not read snapshot file $1"
}

makeSnapshot() {
  # create a snap file with message passed as argument
  local num="$1"
  shift 1
  local msg="$@"
  echo "$msg" > $VARDIR/$num.msg
  prt-get listinst > $VARDIR/$num.snap
}

diffSnapshot() {
  # create an temporary snap file to see differences
  # between current status and the snap passed as argument
  local snap1="$VARDIR/$1.snap"
  local msg="current"
  local num="$(getSnapshotIndex)"
  makeSnapshot $num "$msg"
  local snap2="$VARDIR/$num.snap"
  checkSnapFile $snap1
  checkSnapFile $snap2
  cat $snap1 $snap2 | sort | uniq -u
  rm -f $snap2
}

getSnapshotIndex() {
  # return the first index number available (stored snap files + 1)
  local index="$(find $VARDIR -type f -name '*.snap' | wc -l)"
  let index++
  echo $index
}

cleanSnapshot() {
  # clean all stored snap files
  rm -f $VARDIR/*
}

storeSnapshot() {
  # store a new snap file with a message
  local msg="$1"
  local num="$(getSnapshotIndex)"
  makeSnapshot $num "$msg"
}

restoreSnapshot () {
  # go to a previous status on the system by using a snap
  local snap="$1"
  local diff="$(diffSnapshot $snap)"
  if [ ! -z "$diff" ]; then
    prt-get remove $diff
    local snaps="$(find $VARDIR -type f -name '*.snap')"
    for i in ${snaps[@]}; do
      s="$(basename $i .snap)"
      [ $s -gt $snap ] && rm -vf $VARDIR/$s.*
    done
  fi
}

listSnapshot() {
  # return a list of all stored snap files
  local snaps="$(find $VARDIR -type f -name '*.snap')"
  for i in ${snaps[@]}; do
    s="$(basename $i .snap)"
    t="$(stat -c '%y' $i | cut -d'.' -f1)"
    echo -ne "$s -- $t -- $(cat $VARDIR/$s.msg | tr '\n' ' ')\n"
  done
}

main () {
  case $1 in
    clean)
      cleanSnapshot
      ;;
    store)
      [ $# -ne 2 ] && msgUsage
      checkUID
      shift 1
      storeSnapshot "$@"
      ;;
    restore)
      [ $# -ne 2 ] && msgUsage
      checkUID
      restoreSnapshot $2
      ;;
    diff)
      [ $# -ne 2 ] && msgUsage
      diffSnapshot $2
      ;;
    list)
      listSnapshot
      ;;
    version)
      msgVersion
      ;;
    *)
      msgUsage
      ;;
  esac
}

VERSION=0.3
APPNAME=$(basename $0)

VARDIR="/opt/var/$APPNAME"

[ $# -lt 1 ] && msgUsage
checkVarDir
main "$@"

# End of file
